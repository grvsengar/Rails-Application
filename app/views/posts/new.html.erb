<h1>New Post</h1>

<%= form_for @post, html: { local: true } do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.label :image %>
  <%= f.file_field :image %>

  <%= f.submit "Create Post" %>
<% end %>
