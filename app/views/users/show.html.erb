<h1>User Profile</h1>

<p><strong>Name:</strong> <%= @user.full_name %></p>
<p><strong>Email:</strong> <%= @user.email %></p>

<% unless current_user == @user %>
  <% if current_user.sent_friend_requests.extending.where(receiver_id: @user.id).empty? %>
    <%= link_to 'Send Friend Request', send_request_friend_request_user_path(@user), method: :post %>
  <% else %>
    <p>You have already sent a friend request to this user.</p>
  <% end %>
<% end %>

<% if current_user.received_friend_requests.extending.where(sender_id: @user.id).exists? %>
  <%= link_to 'Accept Friend Request', accept_request_friend_request_user_path(@user), method: :post %>
  <%= link_to 'Reject Friend Request', reject_request_friend_request_user_path(@user), method: :post %>
<% end %>

